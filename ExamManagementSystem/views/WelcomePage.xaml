<Page x:Class="ExamManagementSystem.views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamManagementSystem.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage"
      Background="#1C1F26">

    <Grid>
        <Border Background="#2C2F36"
                BorderBrush="#444"
                BorderThickness="2"
                CornerRadius="20"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Height="340" Width="659"
                >

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Images/exam.png" Height="100" Margin="0,0,0,20"/>

                <TextBlock x:Name="WelcomeTextBlock"
                           TextAlignment="Center"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Welcome to Exam Management System"
                           Foreground="#ECECEC"
                           FontSize="24"
                           FontWeight="Bold"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
