<Window x:Class="ExamManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UET Exam Management System" 
        Height="300" Width="600" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#1C1F26">

    <Grid>
        <!-- Centered StackPanel with Image and Text -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" >
            <Image Source="pack://application:,,,/Images/exam1.png" Width="83" Height="78" Margin="0,0,0,10"/>
            <TextBlock Text="Exam Management System"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
